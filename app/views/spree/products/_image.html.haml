- if defined?(image) && image
  = image_tag image.attachment.url(:product), :itemprop => "image", "data-zoom-image" => image.attachment.url(:original), id: "show_image", class: "item-image"
- else
  = product_image(@product, :itemprop => "image", :itemprop => "image", "data-zoom-image" => @product.images[1].try(:attachment).try(:url, :original), id: "show_image", class: "item-image")